<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="@color/colorWhite"
tools:context="com.example.kennedy.miloo.EditarServicosActivity">

<ScrollView
    android:id="@+id/editar_servico_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/editar_servico_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/titulo_editarservico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorGray"
                android:hint="Titulo do serviço"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textColorHint="@color/colorGray" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/descricao_editarservico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorGray"
                android:hint="Descrição"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textColorHint="@color/colorGray" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/valor_editarservico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorGray"
                android:hint="Valor"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textColorHint="@color/colorGray" />

        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/preco_serico_editarservico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray"
            android:text="Preço do serviço a combinar" />

        <Button
            android:id="@+id/salvar_editarservico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            android:text="SALVAR DADOS"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>

</LinearLayout>