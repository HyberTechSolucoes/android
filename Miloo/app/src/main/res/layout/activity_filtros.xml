<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.kennedy.miloo.FiltrosActivity">
    <ScrollView
        android:id="@+id/editar_servico_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editar_servico_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_filtros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros e Organização"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/organizar_filtros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Organizar profissionais"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
