<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.kennedy.miloo.FiltrosActivity">

    <ScrollView
        android:id="@+id/editar_servico_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/editar_servico_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_filtros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtros e Organização"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/organizar_filtros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Organizar profissionais"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggleButtonRelevantes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@color/colorGraylight"
                android:onClick="onToggleClickedMaisRelevantes"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textOff="Mais Relevantes"
                android:textOn="Mais Relevantes" />


            <ToggleButton
                android:id="@+id/toggleButtonMenorPreco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@color/colorGraylight"
                android:onClick="onToggleClickedMenorPreco"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textOff="Menor preço"
                android:textOn="Menor preço" />


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleButtonProximos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMaisRelevantes"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="Mais próximos"
                    android:textOn="Mais próximos" />


                <ToggleButton
                    android:id="@+id/toggleButtonMelhorAvaliados"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMenorPreco"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="Melhor avaliado"
                    android:textOn="Melhor avaliado" />


            </LinearLayout>

            <TextView
                android:id="@+id/opcoes_atendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Opções de atendimento"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleButtonDomicilio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMaisRelevantes"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="Domicílio"
                    android:textOn="Domicílio" />


                <ToggleButton
                    android:id="@+id/toggleButtonEstabelecimento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMenorPreco"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="Estabelecimento"
                    android:textOn="Estabelecimento" />


            </LinearLayout>

            <TextView
                android:id="@+id/opcoes_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Opções de atendimento"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleButtonDinheiro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMaisRelevantes"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="Dinheiro"
                    android:textOn="Dinheiro" />


                <ToggleButton
                    android:id="@+id/toggleButtonCredito"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMenorPreco"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="C/Crédito"
                    android:textOn="C/Crédito" />

                <ToggleButton
                    android:id="@+id/toggleButtonDebito"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:background="@color/colorGraylight"
                    android:onClick="onToggleClickedMenorPreco"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textOff="C/Débito"
                    android:textOn="C/Débito" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/cancelar_filtros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="Cancelar"
                    android:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/aplicar_filtros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="Aplicar"
                    android:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textStyle="bold" />

             </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
